@using SportyWebApp.Models
@model SportyWebApp.Models.EventDetailsModel

@{
    int x = Model.MaxPlayers - Model.FreePlayers;
}
<link href="~/Content/eventDetails.css" rel="stylesheet" />

<div>
    <div class="iconDiv" style="margin-right: 40px;">
        @if (Model.SportName == "Mali nogomet")
        {
            <img src="~/Images/footballBall.png" class="sportBallIcon" />
        }
        else if (Model.SportName == "Rukomet")
        {
            <img src="~/Images/handballBall.png" class="sportBallIcon" />
        }
        else if (Model.SportName == "Košarka")
        {
            <img src="~/Images/basketballBall.png" class="sportBallIcon" />
        }
        else if (Model.SportName == "Badminton")
        {
            <img src="~/Images/badmintonBall.png" class="sportBallIcon" />
        }
        else if (Model.SportName == "Tenis")
        {
            <img src="~/Images/tennisRacket.png" class="sportBallIcon" />
        }
    </div>
    <div>
        <div class="eventData">
            @Html.DisplayNameFor(model => model.SportName):
            @Html.DisplayFor(model => model.SportName)
        </div>
        <div class="eventData">
            @Html.DisplayNameFor(model => model.Location):
            @Html.DisplayFor(model => model.CityName), @Html.DisplayFor(model => model.Location)
        </div>
        <div class="eventData">
            Broj prijavljenih igrača: @x/@Model.MaxPlayers
        </div>
        <div class="eventData">
            Datum: @Model.StartTime.ToShortDateString()
        </div>
        <div class="eventData">
            Vrijeme početka: @Model.StartTime.ToShortTimeString()
        </div>
    </div>
</div>
<hr />
<div>
    @for (int i = 0; i < Enumerable.Count(ViewBag.users); i += 2)
    {
        <div class="container" style="padding-left: 25%; margin-bottom: 20px;">
            @if (ViewBag.isPlayer)
            {
                <section class="container">
                    <input type="radio" name="example" class="rating" value="1" />
                    <input type="radio" name="example" class="rating" value="2" />
                    <input type="radio" name="example" class="rating" value="3" />
                    <input type="radio" name="example" class="rating" value="4" />
                    <input type="radio" name="example" class="rating" value="5" />
                </section>
            }
            <div class="row col-lg-6" style="float:left;">
                <div class="container">
                    <div class="row col-lg-1">
                        <a href=""><img src="https://cdn3.iconfinder.com/data/icons/gray-toolbar-3/512/user-512.png" /></a>
                    </div>
                    <div class="row col-lg-11">
                        <table>
                            <tr>
                                <td class="eventData">
                                    @ViewBag.users[i].FirstName @ViewBag.users[i].LastName
                                </td>
                            </tr>
                            <tr>
                                <td class="eventData">
                                    @ViewBag.users[i].UserName
                                </td>
                            </tr>
                            <tr>
                                <td class="eventData">
                                    Ocjena: @ViewBag.users[i].Rating/5
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            @if (i + 1 < Enumerable.Count(ViewBag.users))
            {
                <div class="row col-lg-6">
                    <div class="container">
                        @if (ViewBag.isPlayer)
                        {
                            <section class="container">
                                <input type="radio" name="example" class="rating" value="1" />
                                <input type="radio" name="example" class="rating" value="2" />
                                <input type="radio" name="example" class="rating" value="3" />
                                <input type="radio" name="example" class="rating" value="4" />
                                <input type="radio" name="example" class="rating" value="5" />
                            </section>
                        }
                        <div class="row col-lg-1">
                            <a href=""><img src="https://cdn3.iconfinder.com/data/icons/gray-toolbar-3/512/user-512.png" /></a>
                        </div>
                        <div class="row col-lg-11">
                            <table>
                                <tr>
                                    <td class="eventData">
                                        @ViewBag.users[i + 1].FirstName @ViewBag.users[i + 1].LastName
                                    </td>
                                </tr>
                                <tr>
                                    <td class="eventData">
                                        @ViewBag.users[i + 1].UserName
                                    </td>
                                </tr>
                                <tr>
                                    <td class="eventData">
                                        Ocjena: @ViewBag.users[i + 1].Rating/5
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>