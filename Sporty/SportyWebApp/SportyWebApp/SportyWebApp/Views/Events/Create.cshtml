@model SportyWebApp.Models.EventCreateModel

@{
    ViewBag.Title = "Create";
}
<link href="~/Content/register.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1 style="color: blue;">Kreirajte novi događaj</h1>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="event-register">


            <div class="container">

                <div class="row col-lg-6 col-md-6 col-sm-12">
                    <div class="form-group">
                        @Html.Label("Sport", htmlAttributes: new { @class = "eventLabels" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.SportId, new SelectList(Model.lstSports, "Id", "Name"), new { @class = "reg-input fix" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "eventLabels" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "reg-input" } })
                            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Time, htmlAttributes: new { @class = "eventLabels" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "reg-input", @Value = "hh:mm" } })
                            <span>@ViewBag.error</span>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "eventLabels" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "reg-input" } })
                            @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <div class="row col-lg-6 col-md-6 col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "eventLabels" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "reg-input" } })
                            @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MaxPlayers, htmlAttributes: new { @class = "eventLabels" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MaxPlayers, new { htmlAttributes = new { @class = "reg-input" } })
                            @Html.ValidationMessageFor(model => model.MaxPlayers, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.FreePlayers, htmlAttributes: new { @class = "eventLabels" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.FreePlayers, new { htmlAttributes = new { @class = "reg-input" } })
                            @Html.ValidationMessageFor(model => model.FreePlayers, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Kreiraj" class="btn btn-info reg-btn" />
                        </div>
                    </div>
                </div>
                <div style="color:red;">@ViewBag.Message</div>

            </div>
        </div>
    </div>
}
