<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/simpleSidebar.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/search.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/shared.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/profile.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/register.css" rel="stylesheet"  type="text/css" />
    <link href="~/Content/home.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/subscribe.css" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <h1 id="logoTitle">Sporty</h1>
    <div><ul id="navUl"><li class="navLi"></li></ul></div>
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <button id="menu-toggle">
                <img src="~/Images/hamburgerMenuIcon.png" id="menu-toggle-image" />
            </button>
            <ul class="sidebar-nav">
                <li>@Html.ActionLink("Moji događaji", "FutureEvents", "Events") </li>
                <li>@Html.ActionLink("Novi događaj", "Create", "Events") </li>
                <li>@Html.ActionLink("Traži događaje", "Search", "Events")</li>
                @if (ViewBag.CurrentPage != "HomePage")
                {
                  <li>@Html.ActionLink("Danas u gradu", "Index", "Home")</li>
                }
                <li>@Html.ActionLink("Pretplate", "Home", "Subscription") </li>
                <li>@Html.ActionLink("Postavke profila", "Edit", "Profile")</li>
                <li>@Html.ActionLink("Odjava", "Login", "User")</li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div id="container-fluid" class="container-fluid">
                <div class="row">
                    <div id="col-lg-12" class="col-lg-12">
                        @RenderBody()
                    </div>
                </div>
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Sporty development</p>
                </footer>
            </div>
        </div>
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            $("#menu-toggle").blur();
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    @Scripts.Render("~/Scripts/jquery-3.3.1.js")
    @Scripts.Render("~/Scripts/layout.js")
    @Scripts.Render("~/Scripts/event.js")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
